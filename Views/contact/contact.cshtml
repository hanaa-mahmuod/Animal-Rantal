        </div>
        <div class="grid_5 prefix_1">

            <h2  class="ic1 ">Complaint Form</h2>
            <form id="form" method="post" action="/contact/addcomplaint">
                <div class="success_wrapper">
                    <div class="success">
                        Contact form submitted!<br>
                        <strong>We will be in touch soon.</strong>
                    </div>
                </div>
                <fieldset>
                    <div class="form-group" style="display: none;">
                        <!-- Hide this field from the form -->
                        <label asp-for="User_Id" class="control-label"></label>
                        <input asp-for="User_Id" class="form-control" />
                        <span asp-validation-for="User_Id" class="text-danger"></span>
                    </div>
                    <div class="form-group first fw-bold fs-6 mt-3">
                        <label asp-for="Defendant_Email">Email</label>
                        <input type="text" class="form-control " placeholder="Email" asp-for="Defendant_Email">
                        <span asp-validation-for="Defendant_Email" class="text-danger"></span>
                    </div>

