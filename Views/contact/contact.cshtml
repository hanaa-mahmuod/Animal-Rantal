                    </div> *@

                    <label class="message fw-bold fs-6 mt-3" asp-for="Notes">
                        Message
                        <textarea name="notes" asp-for="Notes"></textarea>
                        <span asp-validation-for="Notes" class="text-danger"></span>
                    </label>

                    <div class="clear"></div>
                    <div class="btns">
                        <input type="reset" class="btn btn-lg bg-dark  text-white" style="background-color:#F98D0D" value="Clear">
                        <input type="submit" class="btn btn-lg text-white" style="background-color:#C9E54E" value="Send">
                        <div class="clear"></div>
                    </div>
                </fieldset>
            </form>
